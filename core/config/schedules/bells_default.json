{
  "_name": "Default Schedule",
  "_all": {
    "Name": "All Bells",
    "Description": "A \"virtual\" bell that controls the rest of the bells. DO NOT DELETE",
    "Enabled": true,
    "Locked": false,
    "Actions": {
      "Mail": {
        "Change": {
          "Enabled": true,
          "To": "you@example.com",
          "Subject": "Bell has been changed",
          "Template": "all_change.ejs"
        }
      }
    }
  },
  "_default": {
    "Enabled": true,
    "Name": "Virtual bell - Default",
    "Description": "A virtual bell that is fired when \"button1\" is pressed",
    "Locked": true,
    "Actions": {
      "Audio": {
        "Files": [
          "bell.mp3"
        ],
        "Loop": 1
      },
      "External": {
        "OnValue": 1,
        "OffValue": 0,
        "Duration": 5000
      },
      "Mail": {
        "Trigger": {
          "Enabled": false,
          "To": "you@example.com",
          "Subject": "Bell has been triggered",
          "Template": "trigger.ejs"
        },
        "Change": {
          "Enabled": true,
          "To": "you@example.com",
          "Subject": "Bell has been changed",
          "Template": "change.ejs"
        }
      }
    }
  },
  "_button1": {
    "Enabled": true,
    "Name": "Ring Now",
    "Description": "Button #1 on the PiTFT",
    "Icon": "bell",
    "Locked": true,
    "Actions": {
      "Audio": {
        "Files": [
          "bell.mp3"
        ],
        "Loop": 1
      },
      "External": {
        "OnValue": 1,
        "OffValue": 0,
        "Duration": 5000
      }
    }
  },
  "_button4": {
    "Enabled": true,
    "Name": "Enable / Disable All",
    "Description": "Button #4 on the PiTFT",
    "Icon": "remove",
    "Locked": true,
    "Actions": {
      "ToggleBells": {
        "Bells": [{"Bell": "_all"}]
      }
    }
  },
  "test": {
    "Enabled": false,
    "Name": "Test Bell - Every minute",
    "Description": "A test bell. Runs every minute",
    "Locked": false,
    "Time": "* * * * *",
    "Actions": {
      "Audio": {
        "Files": [
          "bell.mp3"
        ],
        "Loop": 1
      },
      "External": {
        "OnValue": 1,
        "OffValue": 0,
        "Duration": 5000
      },
      "Mail": {
        "Trigger": {
          "Enabled": false,
          "To": "you@example.com",
          "Subject": "Bell has been triggered",
          "Template": "trigger.ejs"
        },
        "Change": {
          "Enabled": true,
          "To": "you@example.com",
          "Subject": "Bell has been changed",
          "Template": "change.ejs"
        }
      }
    }
  }
}
