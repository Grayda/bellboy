<% include includes/header.ejs %>
  <% include includes/layout.ejs %>
    <h1>Switch Schedule</h1>
    <p>The following schedules are available to load. Please select one and click Save.</p>
    <form method="post" class="form-horizontal">
      <div class="form-group form-group-sm">
        <div class="col-sm-10">
          <% locals.bellboy.ViewFiles().forEach(function(item) { %>
            <% var name = locals.bellboy.GetScheduleName(item) %>
              <div class="radio input-lg">
                <label for="<%= item %>">
                  <input type="radio" name="file" id="<%= item %>" value="<%= item %>">
                  <%= name %>
                </label>
              </div>
              <% }) %>
        </div>
      </div>
      <button type="submit" class="btn btn-info" value="Submit">Switch</button>

    </form>
