<div id="audio_toggle_group" class="well well-lg">
  <h4>Play an audio file</h4>
  <p><b>NOTE:</b> only MP3s are currently supported</p>
  <div class="form-group form-group-sm">
    <label for="audio_file" class="col-sm-1 control-label">File(s)</label>
    <div class="col-sm-10">
      <select name="audio_file" id="audio_file" class="form-control" multiple="multiple">
        <% bellboy.modules["bellaudio"].ViewFiles().forEach(function(item){ %>
          <option <% if(locals.data(["Actions"]["Audio"]["Files"]).indexOf(item) > -1) { %>selected="selected"<% } %>>
            <%= item %>
          </option>
          <% }) %>
      </select>
      <p class="help-block">If you pick more than 1 file, a random one will be played each time the bell is triggered. To add more audio files, upload them to the <code>audio</code> folder</p>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <label for="audio_loop" class="col-sm-1 control-label">Loop</label>
    <div class="col-sm-10">
      <input type="number" max="10" min="1" id="audio_loop" name="audio_loop" class="form-control" value="<%= locals.data(['Actions', 'Audio', 'Loop']) %>">
      <p class="help-block">How many times to loop this audio (max 10)</p>
    </div>
  </div>
</div>
